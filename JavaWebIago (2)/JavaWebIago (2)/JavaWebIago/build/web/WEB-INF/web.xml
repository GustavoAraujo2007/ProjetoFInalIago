<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroController</servlet-name>
        <servlet-class>controller.CadastroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoController</servlet-name>
        <servlet-class>controller.ProdutoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutosPesquisa</servlet-name>
        <servlet-class>controller.ProdutosPesquisa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaProdutoController</servlet-name>
        <servlet-class>controller.CategoriaProdutoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroProdutos</servlet-name>
        <servlet-class>controller.CadastroProdutos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaProdutosController</servlet-name>
        <servlet-class>controller.CategoriaProdutosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>indexAdmController</servlet-name>
        <servlet-class>controller.indexAdmController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gerenciarUserController</servlet-name>
        <servlet-class>controller.gerenciarUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarrinhoController</servlet-name>
        <servlet-class>controller.CarrinhoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>controller.CheckoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoricoPedidiosController</servlet-name>
        <servlet-class>controller.HistoricoPedidiosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoricoPedidosAdmController</servlet-name>
        <servlet-class>controller.HistoricoPedidosAdmController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MinhaContaController</servlet-name>
        <servlet-class>controller.MinhaContaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroController</servlet-name>
        <url-pattern>/Cadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoController</servlet-name>
        <url-pattern>/Produto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutosPesquisa</servlet-name>
        <url-pattern>/Pesquisa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaProdutoController</servlet-name>
        <url-pattern>/CategoriaProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroProdutos</servlet-name>
        <url-pattern>/CadastroProdutos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaProdutosController</servlet-name>
        <url-pattern>/CategoriaProdutosController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>indexAdmController</servlet-name>
        <url-pattern>/indexAdm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gerenciarUserController</servlet-name>
        <url-pattern>/gerenciarUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarrinhoController</servlet-name>
        <url-pattern>/Carrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoricoPedidiosController</servlet-name>
        <url-pattern>/HistoricoPedidios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoricoPedidosAdmController</servlet-name>
        <url-pattern>/HistoricoPedidosAdm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MinhaContaController</servlet-name>
        <url-pattern>/MinhaConta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
